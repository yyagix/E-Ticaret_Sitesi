@model ConfirmUser

@{
    ViewData["Title"] = "Mail Onaylama";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="text-center mb-4">Mail Onaylama Formu</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }
                    <form method="post" asp-controller="ConfirmMail" asp-action="Index">
                        <div class="form-group mb-4">
                            <label for="email" class="form-label">Gönderilen Mail Adresiniz</label>
                            <input type="text" class="form-control" value="@Model.Mail" asp-for="Mail" readonly />
                        </div>
                        <div class="form-group mb-4">
                            <label for="confirmCode" class="form-label">Onay Kodunuzu Girin</label>
                            <input type="text" asp-for="ConfirmCode" class="form-control" placeholder="Onay kodunu girin" maxlength="6" />
                            <span asp-validation-for="ConfirmCode" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary btn-lg" type="submit">Hesabı Onayla</button>
                        </div>
                        <div class="form-group text-center mt-4">
                            <a class="btn btn-secondary" href="/Login">Giriş Yap</a>
                            <a class="btn btn-secondary" href="/Home">Ana Sayfa</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
