@model ProductApp.Models.Products

@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Ürün Ekle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Ürün Adı -->
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Ürün Kodu -->
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label">Ürün Kodu</label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            <!-- Ürün Açıklaması -->
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label">Ürün Açıklaması</label>
                <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <!-- Ürün Resmi -->
            <div class="form-group">
                <label class="control-label">Ürün Resmi</label>
                <input asp-for="ImageUpload" type="file" class="form-control" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>

            <!-- Ürün Fiyatı -->
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label">Ürün Fiyatı</label>
                <input asp-for="ProductPrice" type="number" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <!-- Ürün Kategorisi -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Ürün Kategorisi</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.kateListe"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
