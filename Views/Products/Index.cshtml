@model IEnumerable<ProductApp.Models.Products>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Ürün Sayfası</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.ProductPicture)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th class="text-center align-middle">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td class="text-center align-middle">
                    @if (!string.IsNullOrEmpty(item.ProductPicture))
                    {
                        <img src="/Urunler/@item.ProductPicture" class="img-thumbnail mx-auto d-block" width="100" height="100" alt="Ürün Resmi" />
                    }
                    else
                    {
                        <span>Resim Yok</span>
                    }
                </td>
                <td class="text-center align-middle">
                    @item.ProductPrice.ToString("c")
                </td>
                <td class="text-centeratio align-middle">
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td class="text-center align-middle">
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
