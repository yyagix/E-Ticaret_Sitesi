@model CardViewModel

@{
    ViewData["Title"] = "Sepet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Ürün</th>
                        <th>Adet Fiyatı</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model.CardItems)
                    {
                        <tr>
                            <td class="align-middle">
                                <div class="text-center">
                                    <a href="/Home/Detail/@item.ProductId" class="d-block">@item.ProductName</a>
                                    <img src="/Urunler/@item.Image" class="mt-2" style="width: 75px;">
                                </div>
                            </td>
                            <td class="align-middle">@item.Price TL</td>
                            <td class="align-middle">
                                <div class="d-flex align-items-center justify-content-center">
                                 
                                    <a href="@Url.Action("Decrease", "Card", new { id = item.ProductId })" class="btn btn-secondary btn-sm">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                  
                                    <input type="text" class="form-control form-control-sm text-center mx-2" value="@item.Quantity" readonly style="width: 70px;">
                                  
                                    <a href="@Url.Action("Increase", "Card", new { id = item.ProductId })" class="btn btn-secondary btn-sm ms-2">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </td>
                            <td class="align-middle">@item.Total TL</td>
                            <td class="align-middle">
                                <!-- Silme butonu -->
                                <a href="@Url.Action("Remove", "Card", new { id = item.ProductId })" class="btn btn-danger btn-sm">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Sepet Özeti</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Toplam Fiyat</h5>
                        <h5 class="font-weight-bold">@Model.GrandTotal.ToString("c")</h5>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <a href="/Payments" class="btn btn-block btn-primary my-3 py-3">Ödemeye Geç</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
