@model AppUserRegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Kayıt Ol</h1>
</div>
<form class="user" method="post" asp-controller="Register" asp-action="Index">
    <div class="form-group">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control form-control-user" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control form-control-user" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control form-control-user" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control form-control-user" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control form-control-user" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control form-control-user" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <input type="submit" value="Kayıt Ol" class="btn btn-primary btn-user btn-block" />
    <hr>
    <div class="text-center">
        <a class="small" href="/Login">Hesabım Var</a>
    </div>
</form>
