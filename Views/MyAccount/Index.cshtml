@model AppUserEditDto

<div class="container">
    <h1 class="text-center mb-4">Hesap Bilgilerini Güncelle</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }
                    <form method="post">
                        <div class="form-group mb-4">
                            <label for="firstName" class="form-label">Ad</label>
                            <input type="text" asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="lastName" class="form-label">Soyad</label>
                            <input type="text" asp-for="LastName" class="form-control" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="phoneNumber" class="form-label">Telefon Numarası</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="email" class="form-label">E-Posta</label>
                            <input type="text" asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="form-group mb-4">
                            <label for="city" class="form-label">Şehir</label>
                            <input type="text" asp-for="City" class="form-control" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group mb-4">
                            <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary btn-lg" type="submit">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
